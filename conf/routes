# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# HOME
GET     /                           controllers.HomeController.index

# Game
GET     /play                       controllers.GameController.index

# Json
POST    /json                       controllers.JsonController.set(set)
POST    /json                       controllers.JsonController.pick(pick)
POST    /json                       controllers.JsonController.move(move)

# Hidden TUI game
GET     /tui                       controllers._TuiGameController.set(set)
GET     /tui                       controllers._TuiGameController.pick(pick)
GET     /tui                       controllers._TuiGameController.move(move)

# About and Help Page
GET     /about                      controllers.AboutController.index
GET     /help                       controllers.AboutController.help


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)