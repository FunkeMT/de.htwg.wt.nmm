# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# HOME
GET     /                           controllers.HomeController.index

# Game
GET     /play                       controllers.GameController.index

# Json
GET     /json                       controllers.JsonController.get
POST    /json                       controllers.JsonController.process

# Hidden TUI game
GET     /tui                        controllers._TuiGameController.get

GET     /tui/set/:query             controllers._TuiGameController.pick(query: String)
GET     /tui/pick/:query            controllers._TuiGameController.set(query: String)
GET     /tui/move/:query            controllers._TuiGameController.move(query: String)

# About and Help Page
GET     /about                      controllers.AboutController.index
GET     /help                       controllers.AboutController.help


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)